provider "azurerm" {
  features {}
}

resource "azurerm_resource_group" "billing" {
  name     = "billing-rg"
  location = "East US"
}

resource "azurerm_cosmosdb_account" "billing" {
  name                = "billing-cosmos"
  location            = azurerm_resource_group.billing.location
  resource_group_name = azurerm_resource_group.billing.name
  offer_type          = "Standard"
  kind                = "GlobalDocumentDB"

  capabilities {
    name = "EnableServerless"
  }

  consistency_policy {
    consistency_level = "Session"
  }
}

resource "azurerm_storage_account" "archive" {
  name                     = "billingarchivestore"
  resource_group_name      = azurerm_resource_group.billing.name
  location                 = azurerm_resource_group.billing.location
  account_tier             = "Standard"
  account_replication_type = "LRS"
}

resource "azurerm_function_app" "archive_handler" {
  name                       = "billing-archiver"
  location                   = azurerm_resource_group.billing.location
  resource_group_name        = azurerm_resource_group.billing.name
  app_service_plan_id        = azurerm_app_service_plan.billing_plan.id
  storage_account_name       = azurerm_storage_account.archive.name
  storage_account_access_key = azurerm_storage_account.archive.primary_access_key
  version                    = "~4"
  os_type                    = "linux"
  runtime_stack              = "python"
}
